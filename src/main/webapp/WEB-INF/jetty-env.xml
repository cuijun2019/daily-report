<Configure class="org.eclipse.jetty.webapp.WebAppContext" id="wac">
    <New id="base" class="org.mortbay.jetty.plus.naming.Resource">
        <Arg></Arg>
        <Arg>jdbc/base</Arg>
        <Arg>
            <New class="org.h2.Driver">
                <Set name="url">jdbc:h2:file:~/.h2/base;AUTO_SERVER=TRUE;IGNORECASE=TRUE;MODE=MySQL;</Set>
                <Set name="username">sa</Set>
                <Set name="password"></Set>
            </New>
        </Arg>
    </New>
</Configure>